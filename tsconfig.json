{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop":true,
      "lib": ["es2015", "dom", "WebWorker"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "rootDir": "src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2015"
    },
    "include": [
      "src/*.ts"
    ]
  }